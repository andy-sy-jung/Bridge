<h2>Details about <em><%= @posting.name %>'s posting</em></h2>

<ul id="details">
  <li>
    Type:
    <%= @posting.type_of %>
  </li>
  <li>
    Subject:
    <%= @posting.subject %>
  </li>
  <li>
    Description:
    <%= @posting.description %>
  </li>
  <li>
    Availability:
    <%= @posting.availability %>
  </li>
  <li>
    Price:
    <%= @posting.price %>
  </li>
  <li>
    Contact Info:
    <%= @posting.contact %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @posting.description %>
</p>

<div class="row">
  <%= link_to 'Edit posting', edit_posting_path(@posting), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete posting', posting_path(@posting), method: :delete, class: 'btn btn-danger col-2' %>
  <%= link_to 'Back to full list', postings_path, :class => 'btn btn-primary col-2' %>
</div>